<div class="window-head">
    {{#each main.windowHead}}
        {{#if @first}}
        <label class="window-back">
            {{#if this.button}}
                <button class="window-head__button">
                    <svg class="window-head__bitton-image" width="8px" height="11" viewBox="0 0 8 11">
                        <use href="{{assets}}/img/svg-sprite/sprite.svg#back-arrow"></use>
                    </svg> 
                </button>
            {{/if}}
            <p class="window-head__title">{{this.title}}</p>
        </label>
        {{/if}}
    {{/each}}
</div>