
<div class="balance-history_mobile">
{{#each this}}
    <div class="balance-history_mobile__item">
        <div class="balance-history__item-head">
            <h1>{{title}}</h1>
            <svg class="balance-history__item-head--arrow" width="8px" height="11" viewBox="0 0 8 11">
                <use href="{{assets}}/img/svg-sprite/sprite.svg#back-arrow"></use>
            </svg>
        </div>
    {{#each data}}
    <div class="balance-history_mobile__item-wrapp">
        <div class="balance-history_mobile__item-row">
            <div class="balance-history_mobile__item-row--elem">
                <span>{{date}}</span>
            </div>
            <div class="balance-history_mobile__item-row--elem amount">
                {{amount}}
            </div>
        </div>
        <div class="balance-history_mobile__item-row">
            <div class="balance-history_mobile__item-row--elem">
                {{#if description}}
                    {{description}}
                {{else}}
                    <span>From: </span>
                    {{description}}
                {{/if}} 
            </div>
            <div class="balance-history_mobile__item-row--elem">
                <span>Method: </span>
                {{method}}
            </div>
        </div>
    </div>
    {{/each}}
    </div>
{{/each}}
</div>
