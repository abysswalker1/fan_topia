<div class="side-subscribe-btn">

  <div class="side-subscribe-btn__wrapper">
    <button class="creator__subscribe-btn">
      {{#unless free}}
      <a href="" class="creator__subscribe-btn--link">
          <svg class="creator__subscribe-btn--icon" width="22" height="14">
              <use href="{{assets}}/img/svg-sprite/sprite.svg#subscribers"></use>
          </svg>
          <p class="creator__subscribe-btn--text">
              Subscribe for $12 per month
          </p>
      </a>
      {{else}}
      <a href="" class="creator__subscribe-btn--link">
          <svg class="creator__subscribe-btn--icon" width="22" height="14">
              <use href="{{assets}}/img/svg-sprite/sprite.svg#subscribers"></use>
          </svg>
          <p class="creator__subscribe-btn--text">
              Subscribe for free
          </p>
      </a>
      {{/unless}}
    </button>
  </div>

    <nav class="promoted-creators-sidebar__nav">
    {{#each main.sidebarNav}}
      <a href="{{this.href}}" class="promoted-creators-sidebar__nav-item">{{this.title}}</a>
    {{/each}}
  </nav>

